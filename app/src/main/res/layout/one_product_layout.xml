<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/wholeItem">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/oneProduct"
        android:layout_margin="5dp"
        app:cardElevation="7dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="2dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:id="@+id/productImage"
                    android:src="@mipmap/ic_launcher"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Product Name"
                    android:textSize="18sp"
                    android:maxLines="1"
                    android:textStyle="bold|italic"
                    android:id="@+id/productName"
                    android:layout_marginTop="5dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price"
                        android:textSize="15sp"
                        android:id="@+id/priceTitle"
                        android:textStyle="italic"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ksh."
                        android:textSize="15sp"
                        android:textStyle="italic"
                        android:layout_toStartOf="@+id/productPrice"
                        android:layout_marginRight="1dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="500"
                        android:textSize="15sp"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/productPrice"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stock"
                        android:textSize="15sp"
                        android:id="@+id/quantityTitle"
                        android:textStyle="italic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20"
                        android:textSize="15sp"
                        android:layout_toStartOf="@+id/productUnits"
                        android:id="@+id/productQuantity"
                        android:layout_marginRight="2dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="units"
                        android:textSize="15sp"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/productUnits"/>

                </RelativeLayout>

            </LinearLayout>

            <!--        Product overlay-->
           <RelativeLayout
               android:layout_width="122dp"
               android:layout_height="200dp"
               android:background="#59ff0d05"
               android:gravity="center"
               android:visibility="gone"
               android:id="@+id/productInCartMark">

               <ImageView
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:src="@drawable/ic_baseline_shopping_cart_24"/>

           </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>